{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2018",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "declaration": true,
        "declarationMap": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "paths": {
            "rlayers": ["../src"],
            "rlayers/*": ["../src/*"],
        }
    },
    "include": [
        ".",
        "../src"
    ]
}